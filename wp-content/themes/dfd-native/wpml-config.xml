<wpml-config>
	<custom-types>
		<custom-type translate="1">portfolio</custom-type>
		<custom-type translate="1">gallery</custom-type>
	</custom-types>
	
	<taxonomies>
		<taxonomy translate="1">portfolio_category</taxonomy>
		<taxonomy translate="1">portfolio_tags</taxonomy>
		<taxonomy translate="1">gallery_category</taxonomy>
		<taxonomy translate="1">gallery_tags</taxonomy>
	</taxonomies>
	<admin-texts>
		<key name="native">
			<key name="top_adress_field"/>
			<key name="folio_top_page_title"/>
			<key name="portfolio_url_slug"/>
			<key name="header_copyright_8"/>
			<key name="header_copyright_9"/>
			<key name="header_copyright_12"/>
			<key name="header_copyright_13"/>
			<key name="header_copyright_14"/>
			<key name="copyright_subfooter_1"/>
			<key name="copyright_subfooter_2"/>
			<key name="copyright_subfooter_3"/>
			<key name="blog_top_page_url"/>
			<key name="folio_top_page_url"/>
			<key name="dfd_gallery_top_page_url"/>
		</key>
	</admin-texts>
	<shortcodes>
        <shortcode>
            <tag>dfd_button</tag>
            <attributes>
                <attribute>button_text</attribute>
            </attributes>
        </shortcode>
        <shortcode>
            <tag>dfd_heading</tag>
            <attributes>
                <attribute>subtitle</attribute>
            </attributes>
        </shortcode>
        <shortcode>
            <tag>dfd_info_banner</tag>
            <attributes>
                <attribute>banner_content</attribute>
                <attribute>readmore_text</attribute>
            </attributes>
        </shortcode>
        <shortcode>
            <tag>dfd_pricing_block</tag>
            <attributes>
                <attribute>button_text</attribute>
                <attribute>feat_mark_text</attribute>
                <attribute>icon_text</attribute>
                <attribute>subtitle</attribute>
                <attribute>title</attribute>
            </attributes>
        </shortcode>
        <shortcode>
            <tag>dfd_short_info_block</tag>
        </shortcode>
        <shortcode>
            <tag>dfd_videoplayer</tag>
            <attributes>
                <attribute>subtitle</attribute>
                <attribute>title</attribute>
            </attributes>
        </shortcode>
        <shortcode>
            <tag>tooltip</tag>
            <attributes>
                <attribute>text</attribute>
            </attributes>
        </shortcode>
    </shortcodes>
</wpml-config>